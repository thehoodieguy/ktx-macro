{
  "manifest_version": 2,
  "name": "KTX Macro",
  "description": "KTX 자동 예약 매크로",
  "version": "1.2.0",
  "permissions": ["http://www.letskorail.com/", "storage"],
  "icons": {
    "96": "icon96.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": ["http://www.letskorail.com/*"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["inject.js", "assets/tada.mp3"],
  "browser_action": {
    "default_title": "popup",
    "default_popup": "popup.html"
  }
}
